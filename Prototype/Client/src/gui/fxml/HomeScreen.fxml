<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>


<StackPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <BorderPane minHeight="800.0" minWidth="1280.0">
         <center>
            <VBox alignment="CENTER" prefHeight="783.0" prefWidth="1085.0">
               <children>
                  <ImageView fitHeight="336.0" fitWidth="336.0">
                     <image>
                        <Image url="@bistro_transparent.png" />
                     </image>
                  </ImageView>
                  <HBox alignment="TOP_CENTER" prefHeight="128.0" prefWidth="1156.0" spacing="30.0">
                     <children>
                        <Button fx:id="ViewOrdersButton" mnemonicParsing="false" styleClass="button-primary" stylesheets="@styles.css" text="View Orders" />
                        <Button fx:id="UpdateOrderButton" mnemonicParsing="false" styleClass="button-primary" stylesheets="@styles.css" text="Update Order" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </center>
         <bottom>
            <HBox alignment="CENTER" spacing="700.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="ConStatButton" alignment="CENTER" mnemonicParsing="false" onAction="#openConnectionStatus" prefHeight="29.0" prefWidth="124.0" styleClass="button-primary" stylesheets="@styles.css" text="Connection Status" />
                  <Label alignment="BOTTOM_RIGHT" text="© 2025 Bistro Management System – All rights reserved · v0.1 Prototype." />
               </children>
            </HBox>
         </bottom>
      </BorderPane>
      <StackPane fx:id="modalOverlay" prefHeight="150.0" prefWidth="200.0" styleClass="modal-overlay" stylesheets="@styles.css" visible="false" managed="false">
            <children>
                <fx:include source="ConnectionModal.fxml"/>
            </children>
        </StackPane>
  </children>
</StackPane>
